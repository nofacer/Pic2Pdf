{
  "name": "comic2pdf",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev": "NODE_ENV=DEV vue-cli-service serve & sleep 5 && NODE_ENV=DEV electron app.js",
    "test:unit": "jest -c unit.jest.config.js",
    "test:func": "npm run build && jest -c func.jest.config.js",
    "test:all": "npm run build && jest -c all.jest.config.js",
    "dist": "electron-builder -c.extraMetadata.main=app.js "
  },
  "build": {
    "files": [
      "app.js",
      "dist/css/*",
      "dist/js/*",
      "dist/*",
      "package.json"
    ],
    "directories": {
      "output": "packaged"
    },
    "icon":"book_logo.png"
  },



  "dependencies": {
    "core-js": "^2.6.5",
    "pdfkit": "^0.10.0",
    "vue": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "@jest-runner/electron": "^2.0.2",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-unit-jest": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "electron-builder": "^21.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "jest": "^24.8.0",
    "spectron": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]

}